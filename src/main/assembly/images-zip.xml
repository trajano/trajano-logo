<?xml version="1.0" encoding="UTF-8"?>
<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>images</id>
	<formats>
		<format>zip</format>
	</formats>
	<fileSets>
		<fileSet>
			<directory>target/generated-resources/batik</directory>
			<includes>
				<include>*</include>
			</includes>
			<excludes>
				<exclude>business-card-sheet.png</exclude>
				<exclude>favicon.png</exclude>
			</excludes>
		</fileSet>
	</fileSets>
	<files>
		<file>
			<source>target/generated-resources/batik/favicon.png</source>
			<destName>favicon.ico</destName>
		</file>
	</files>
</assembly>
